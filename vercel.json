{
    "version": 2,
    "builds": [{ "src": "app.py", "use": "@vercel/python" }],
    "routes": [
      {
        "src": "/",
        "dest": "/app.py"
      },
      {
        "src": "/api/products",
        "dest": "/app.py",
        "methods": ["GET"]
      },
      {
        "src": "/api/products/search",
        "dest": "/app.py",
        "methods": ["GET"]
      },
      {
        "src": "/products",
        "dest": "/product.json"
      }
    ],
    "env": {
      "FLASK_ENV": "production",
      "FLASK_APP": "app.py"
    }
  }
  